    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build binary",
            "type": "shell",
            "command": "make",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Generate ISO",
            "type": "shell",
            "command": "make iso",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Start QEMU emulator with the ISO",
            "type": "shell",
            "command": "make qemuiso",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Start Bochs emulator with the ISO",
            "type": "shell",
            "command": "bochs",
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}